<?xml version="1.0" encoding="UTF-8"?>
<project basedir="." default="jar">
	
	<property name="build" value="build"/>
	<property name="libDir" value="/usr/lib/java"/>
	<target name="clean">
		<delete dir="${build}"/>
	</target>
	
	<target name="init" depends="clean">
		<mkdir dir="${build}"/>
	</target>
	
	<target name="compile" depends="init">
		<!-- Compile the java code -->
		<javac srcdir="src" destdir="${build}" debug="true" debuglevel="lines,vars,source">
			<classpath>
				<pathelement location="${libDir}/commons-logging-1.1.1/commons-logging-1.1.1.jar"/>
				<pathelement location="${libDir}/tritonus/tritonus_share-0.3.6.jar"/>
				<pathelement location="${libDir}/jna/jna.jar"/>
			</classpath>
		</javac>
	</target>
	
  	<target name="jar" depends="compile">
		<!-- Build the jar file -->
		<jar basedir="${build}" destfile="${build}/cdutils.jar">
			<zipfileset src="${libDir}/commons-logging-1.1.1/commons-logging-1.1.1.jar"/>
			<zipfileset src="${libDir}/tritonus/tritonus_share-0.3.6.jar"/>
			<zipfileset src="${libDir}/jna/jna.jar"/>
		</jar>	
  		<copy file="${build}/cdutils.jar" todir="${libDir}/cdutils" overwrite="true"/>
  		<!--copy file="${build}/cdutils.jar" todir="/home/ollie/workspace/jTunes/war/WEB-INF/lib" overwrite="true"/-->
  		<delete dir="${build}"/>
	</target>
  	
</project>